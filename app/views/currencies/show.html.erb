<h1>Currency Detail</h1>

<div class="currency-detail-tables">
  <ul class="currency-detail">
    <li>
      <table class="currency">
        <tr>
          <td>項目</td>
          <td>内容</td>
        </tr>
        <tr>
          <td>Currency ID</td>
          <td><%= @currency.currency_id %></td>
        </tr>
        <tr>
          <td>Currency Name</td>
          <td><%= @currency.name %></td>
        </tr>
        <tr>
          <td>発行者</td>
          <td><%= @currency.publisher_name %></td>
        </tr>
        <tr>
          <td>単位</td>
          <td><%= @currency.unit %></td>
        </tr>
        <tr>
          <td>総流通量</td>
          <td><%= number_with_delimiter(@currency.distribution) %></td>
        </tr>
      </table>
    </li>
    <li>
      <table class="log">
        <tr>
          <th>Date</th>
          <th>Currency Name</th>
          <th>Amount</th>
          <th>Operation</th>
          <th>From Member</th>
          <th>To Member</th>
        </tr>
        <% @logs.each do |log| %>
        <tr>
          <td>Now empty</td>
          <td><%= log.currency_id %></td>
          <td><%= log.amount %></td>
          <td><%= log.log %></td>
          <td><%= log.from_member_id %></td>
          <td><%= log.to_member_id %></td>
        </tr>
        <% end %>
      </table>
    </li>
  </ul>
</div>

